
a="$1"

if [ ! -z "$a" ]; then
	echo "$a"
#another comment
	a="hallo
welt
oh
je
mi
ne"
eval '
	if [ "1" = "2" ]; then
		echo uncovered
	elif [ ! -z "$a" ]
	then
		echo "$a"
	else
		echo "oh nein"
	fi
echo "$a"
'
else
	echo "oh nein"
fi

echo "$a"

# acomment
a="$( echo $a | sed -e s/a/A/g | tr " " "x")"

